---
const { title } = Astro.props
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>


<style>
  section {
    max-width: 700px;
    margin: 3rem auto 64px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.3;
    font-size: 1.2rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
